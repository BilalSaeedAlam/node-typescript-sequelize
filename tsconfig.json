{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": ".",  // Ensure that rootDir is set to the root level to include all files
    "baseUrl": ".",
    "paths": {
      "@models/*": ["models/*"],
      "@config/*": ["config/*"],
      "@controllers/*": ["src/controllers/*"],
      "@routes/*": ["src/routes/*"],
      "@services/*": ["src/services/*"]
    }
  },
  "include": [
    "src/**/*.ts",    // Ensure src directory is included
    "models/**/*.ts",
    "migrations/**/*.ts",
    "config/**/*.ts",
    "seeders/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
